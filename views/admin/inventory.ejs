<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Low Stock Products</title>
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        body {
            display: flex;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 220px;
            background-color: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
            padding: 20px;
        }

        .sidebar h2 {
            margin-bottom: 30px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 0;
        }

        .sidebar a:hover {
            background-color: #34495e;
        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            flex-grow: 1;
            background-color: #f4f4f4;
            min-height: 100vh;
        }

        header {
            background-color: #2980b9;
            color: white;
            padding: 15px;
            font-size: 20px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table th, table td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: center;
        }

        table th {
            background-color: #3498db;
            color: white;
        }

        .alert {
            color: red;
            font-weight: bold;
        }

        footer {
            background-color: #2c3e50;
            color: white;
            padding: 10px;
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Admin Panel</h2>
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/orders">Orders</a>
        <a href="/admin/inventory">Inventory</a>
        <a href="/admin/products">Products</a>
        <a href="/admin/logout">Logout</a>
    </div>

    <div class="main-content">
        <header>üì¶ Low Stock Alert</header>

        <table id="lowStockTable">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Stock Quantity</th>
                    <th>Alert</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <footer>
            &copy; <%= new Date().getFullYear() %> E-Commerce Admin Panel. All rights reserved.
        </footer>
    </div>

    <script>
        async function loadLowStockProducts() {
            try {
                const response = await fetch('/products/api/all');
                const products = await response.json();
                const lowStock = products.filter(p => p.stock_quantity < 10);
                const tableBody = document.querySelector("#lowStockTable tbody");

                tableBody.innerHTML = "";

                lowStock.forEach(product => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td><img src="/images/products/${product.image}" alt="${product.name}" width="50"></td>
                        <td>${product.name}</td>
                        <td>${product.category}</td>
                        <td>${product.stock_quantity}</td>
                        <td class="alert">‚ö†Ô∏è Low Stock</td>
                        <td><a href="/admin/products/edit/${product.product_id}">‚úèÔ∏è Edit</a></td>
                    `;
                    tableBody.appendChild(row);
                });

                if (lowStock.length === 0) {
                    const row = document.createElement('tr');
                    row.innerHTML = `<td colspan="6">‚úÖ All stock levels are healthy!</td>`;
                    tableBody.appendChild(row);
                }

            } catch (err) {
                console.error("Error loading products", err);
            }
        }

        loadLowStockProducts();
    </script>
</body>
</html>

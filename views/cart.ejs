<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShopEase - Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <!-- Navigation (same as index.html) -->
    <%- include('./partial/nav.ejs')%>

    <!-- Shopping Cart Section -->
    <section class="shopping-cart py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-white">
                            <h4 class="mb-0">
                                Your Shopping Cart (<span id="cartItemCount">3</span> items)
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="cartItems">
                                        <!-- Cart items will be loaded via JavaScript -->
                                        <tr class="cart-item">
                                            <td>
                                                <div class="d-flex">
                                                    <div class="cart-item-img me-3">
                                                        <img src="assets/product1-thumb1.jpg" alt="Product"
                                                            class="img-thumbnail" />
                                                    </div>
                                                    <div class="cart-item-details">
                                                        <h6 class="mb-1">Premium Wireless Headphones</h6>
                                                        <p class="text-muted mb-0">Color: Black</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>$199.99</td>
                                            <td>
                                                <div class="input-group" style="width: 120px">
                                                    <button class="btn btn-outline-secondary" type="button">
                                                        -
                                                    </button>
                                                    <input type="text" class="form-control text-center" value="1" />
                                                    <button class="btn btn-outline-secondary" type="button">
                                                        +
                                                    </button>
                                                </div>
                                            </td>
                                            <td>$199.99</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="cart-item">
                                            <td>
                                                <div class="d-flex">
                                                    <div class="cart-item-img me-3">
                                                        <img src="assets/product2-thumb1.jpg" alt="Product"
                                                            class="img-thumbnail" />
                                                    </div>
                                                    <div class="cart-item-details">
                                                        <h6 class="mb-1">Smart Watch Pro</h6>
                                                        <p class="text-muted mb-0">Color: Silver</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>$249.99</td>
                                            <td>
                                                <div class="input-group" style="width: 120px">
                                                    <button class="btn btn-outline-secondary" type="button">
                                                        -
                                                    </button>
                                                    <input type="text" class="form-control text-center" value="1" />
                                                    <button class="btn btn-outline-secondary" type="button">
                                                        +
                                                    </button>
                                                </div>
                                            </td>
                                            <td>$249.99</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="cart-item">
                                            <td>
                                                <div class="d-flex">
                                                    <div class="cart-item-img me-3">
                                                        <img src="assets/product3-thumb1.jpg" alt="Product"
                                                            class="img-thumbnail" />
                                                    </div>
                                                    <div class="cart-item-details">
                                                        <h6 class="mb-1">Wireless Charger</h6>
                                                        <p class="text-muted mb-0">Color: White</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>$39.99</td>
                                            <td>
                                                <div class="input-group" style="width: 120px">
                                                    <button class="btn btn-outline-secondary" type="button">
                                                        -
                                                    </button>
                                                    <input type="text" class="form-control text-center" value="2" />
                                                    <button class="btn btn-outline-secondary" type="button">
                                                        +
                                                    </button>
                                                </div>
                                            </td>
                                            <td>$79.98</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <button class="btn btn-outline-secondary" id="continueShoppingBtn">
                                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                </button>
                                <button class="btn btn-outline-danger" id="clearCartBtn">
                                    <i class="fas fa-trash me-2"></i>Clear Cart
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Promo Code</h5>
                        </div>
                        <div class="card-body">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter promo code" />
                                <button class="btn btn-primary" type="button">Apply</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal (3 items)</span>
                                <span>$529.96</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping</span>
                                <span>$0.00</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax</span>
                                <span>$42.40</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Discount</span>
                                <span class="text-danger">-$20.00</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <h5>Total</h5>
                                <h5>$552.36</h5>
                            </div>
                            <button class="btn btn-primary btn-lg w-100" id="checkoutBtn">
                                Proceed to Checkout
                            </button>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-body">
                            <h6 class="mb-3">We Accept</h6>
                            <div class="payment-methods">
                                <img src="assets/visa.png" alt="Visa" class="img-fluid me-2" />
                                <img src="assets/mastercard.png" alt="Mastercard" class="img-fluid me-2" />
                                <img src="assets/paypal.png" alt="PayPal" class="img-fluid" />
                            </div>
                            <div class="secure-checkout mt-3">
                                <i class="fas fa-lock text-success me-2"></i>
                                <span>Secure Checkout</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer (same as index.html) -->
    <%- include('./partial/footer.ejs')%>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/cart.js"></script>
</body>

</html>
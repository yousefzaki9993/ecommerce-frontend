<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEase - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navigation -->
    <% if (session.userData ) { %>
        <%- include('./partial/nav_logged.ejs')%>
    <% } else { %>
        <%- include('./partial/nav.ejs')%>
    <% } %>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1>Welcome to ShopEase</h1>
                <p>Discover amazing products at unbeatable prices</p>
                <a href="/products" class="btn btn-primary btn-lg">Shop Now</a>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-products py-5">
        <div class="container">
            <h2 class="text-center mb-5">Featured Products</h2>
            <div class="row" id="featured-products-container">
                <!-- Products will be loaded via JavaScript -->
            </div>
        </div>
    </section>

    <!-- Promotions -->
    <section class="promotions py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="promo-card">
                        <h3>Summer Sale</h3>
                        <p>Up to 50% off on selected items</p>
                        <a href="#" class="btn btn-outline-light">Shop Now</a>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="promo-card promo-card-2">
                        <h3>New Arrivals</h3>
                        <p>Discover our latest products</p>
                        <a href="#" class="btn btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('./partial/footer.ejs')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/products.js"></script>
</body>

</html>
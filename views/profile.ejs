<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEase - Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navigation (same as dashboard.html) -->
    <%- include('./partial/nav_logged.ejs')%>
    <% if (success_msg && success_msg.length> 0) { %>
        <div class="alert alert-success">
            <%= success_msg %>
        </div>
    <% } %>
    <% if (error_msg.length> 0) { %>
        <div class="alert alert-danger">
            <%= error_msg %>
        </div>
    <% } %>
    <!-- Profile Section -->
    <section class="profile py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <!-- Sidebar (same as dashboard.html) -->
                    <%- include('./partial/sidebar.ejs')%>
                </div>

                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0">Profile Information</h4>
                        </div>
                        <div class="card-body">
                            <form id="profileForm" method="post" action="/user/profile">
                                <div class="row mb-4">
                                    <div class="col-md-3">
                                        <div class="profile-picture">
                                            <img src="/assets/<%= data.profile_picture %>" alt="Profile Picture"
                                                class="img-thumbnail mb-2" id="profileImage">
                                            <div class="d-grid">
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                    id="changePictureBtn">
                                                    Change Picture
                                                </button>
                                                <input type="hidden" id="profileImageInput" name="profileImage" 
                                                value="<%= data.profile_picture %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="row mb-3">
                                            <div class="col-md-6 mb-3">
                                                <label for="profileFirstName" class="form-label">First Name</label>
                                                <input type="text" class="form-control" id="profileFirstName"
                                                    value="<%= data.first_name %>" name="first_name">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="profileLastName" class="form-label">Last Name</label>
                                                <input type="text" class="form-control" id="profileLastName"
                                                    value="<%= data.last_name %>" name="last_name">
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="profileEmail" class="form-label">Email Address</label>
                                            <input type="email" class="form-control" id="profileEmail"
                                                value="<%= data.email %>" name="email">
                                        </div>

                                        <div class="mb-3">
                                            <label for="profilePhone" class="form-label">Phone Number</label>
                                            <input type="tel" class="form-control" id="profilePhone"
                                                value="<%= data.phone %>" name="phone">
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="profileBio" class="form-label">Bio</label>
                                    <textarea class="form-control" id="profileBio"
                                        rows="3" name="bio"><%= data.bio %></textarea>
                                </div>

                                <div class="text-end">
                                    <button type="button" class="btn btn-outline-secondary me-2"
                                        id="cancelProfileChanges">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn btn-primary" id="saveProfileChanges">
                                        Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer (same as index.html) -->
    <%- include('./partial/footer.ejs')%>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>
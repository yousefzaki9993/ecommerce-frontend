<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEase - Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navigation (same as dashboard.html) -->
    <%- include('./partial/nav_logged.ejs')%>
    <% if (success_msg && success_msg.length> 0) { %>
        <div class="alert alert-success">
            <%= success_msg %>
        </div>
    <% } %>
    <% if (error_msg.length> 0) { %>
        <div class="alert alert-danger">
            <%= error_msg %>
        </div>
    <% } %>
    <!-- Profile Section -->
    <section class="profile py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <!-- Sidebar (same as dashboard.html) -->
                    <%- include('./partial/sidebar.ejs')%>
                </div>

                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0">Profile Information</h4>
                        </div>
                        <div class="card-body">
                            <form id="profileForm" method="post" action="/user/updatepass">
                                <div class="row mb-4">
                                    <div class="col-md-9">
                                        <div class="row mb-3">
                                            <div class="col-md-6 mb-3">
                                                <label for="oldPass" class="form-label">Old Password</label>
                                                <input type="password" class="form-control" id="oldPass"
                                                    name="oldPass" required>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="newPass" class="form-label">New Password</label>
                                                <input type="password" class="form-control" id="newPass"
                                                name="newPass" required>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="confirmPass" class="form-label">Confirm New Password</label>
                                                <input type="password" class="form-control" id="confirmPass"
                                                    name="confirmPass" required>
                                            </div>
                                        </div>
                                </div>
                                <div class="text-end">
                                    <button type="button" class="btn btn-outline-secondary me-2"
                                        id="cancelProfileChanges">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn btn-primary" id="saveProfileChanges">
                                        Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer (same as index.html) -->
    <%- include('./partial/footer.ejs')%>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>